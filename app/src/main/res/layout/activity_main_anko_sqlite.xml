<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical"
        tools:context=".AnkoSQLite.MainAnkoSQLite">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextNIM"
            android:hint="Input NIM" android:textSize="15dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextNama"
            android:hint="Input Nama" android:textSize="15dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextJurusan"
            android:hint="Input Jurusan" android:textSize="15dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:id="@+id/editTextEmail"
            android:hint="Input Email"
            android:inputType="textEmailAddress" android:textSize="15dp"/>

    <Button
            android:text="Simpan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/buttonSimpan"
            android:background="#9AB6FC"
            android:textColor="#FFFFFFFF"/>
    <Button
            android:text="Lihat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:id="@+id/buttonLihat"
            android:background="#9AB6FC"
            android:textColor="#FFFFFFFF"/>
    <Button
            android:text="Update"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonUpdate"
            android:background="#9AB6FC"
            android:textColor="#FFFFFFFF"/>

</LinearLayout>