<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        tools:context=".MainActivity.MainActivity" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/header"
            android:textColor="#1E6096"
            android:textSize="30dp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/header2"
            android:textColor="#2196F3"
            android:textSize="20dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/teks_klik"
            android:textStyle="italic"
            android:textColor="#77848B"
            android:textSize="11dp"/>
    <Button
            android:id="@+id/ankoSQLite"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#7C3C6AF3"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="Input Anko SQLite"
            android:textSize="18dp"/>

    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="121dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="#8EE694"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="Created By :"
                android:textColor="#000000"
                android:textSize="13dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="Nama : Dominikus Afendi Nahak"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="NIM : 165410135"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>